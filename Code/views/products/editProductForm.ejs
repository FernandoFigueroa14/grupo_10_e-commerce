<!DOCTYPE html>
<html lang="en">
<head>
    <!-- head --> 
    <%- include('../partials/head') %>
    <!-- /head -->
    <title>Editar producto</title>
</head>
<body>
    <!-- header --> 
    <%- include('../partials/header', {selected: ''}) %>
    <!-- /header --> 
    <main>
        <h1 id="create-product-title">Editar producto: <%= product.name %></h1>
        <h1 id="create-product-title-id">ID: <%= product.product_id %></h1>
        <div id="main-register">
            <div id="form-container-register">
                <form action="/product/edit?_method=PUT" method="POST" id="form-register" enctype="multipart/form-data">
                    <div class="form-control-create">
                        <input type="text" name="id" value="<%= locals.oldData ? oldData.product_id : product.product_id %>" minlength="5" readonly id="id-product-update-form">
                    </div>
                    <div class="form-control-create">
                        <input type="text" name="name" placeholder="Nombre del producto" minlength="5" value='<%= locals.oldData ? oldData.name : product.name %>''>
                        <% if (locals.errors && errors.name) { %>
                            <p class="errors-style"> <%= errors.name.msg %> </p>
                        <% } %>
                    </div>
                    <div class="form-control-create">
                        <input type="text" name="price" placeholder="Precio" value="<%= locals.oldData ? oldData.price : product.price %>">
                        <% if (locals.errors && errors.price) { %>
                            <p class="errors-style"> <%= errors.price.msg %> </p>
                        <% } %>
                    </div>
                    <div class="form-control-create">
                        <textarea type="text" name="description" placeholder="Descripción" minlength="5"><%= locals.oldData ? oldData.description : product.description %></textarea>
                        <% if (locals.errors && errors.description) { %>
                            <p class="errors-style"> <%= errors.description.msg %> </p>
                        <% } %>
                    </div>
                    <h3 class="titles-create-product">Categoria</h3>
                    <div id="form-control-create-select"> 
                        <select name="category">
                            <option value="male" selected="selected">Hombre</option>
                            <option value="female" >Mujer</option>
                            <option value="kid" >Niño</option>
                        </select>
                    </div>
                    <h3 class="titles-create-product">Talla</h3>
                    <div id="form-control-create-select"> 
                        <select name="size">
                            <option value="CH" selected="selected">CH</option>
                            <option value="M" >M</option>
                            <option value="G" >G</option>
                            <option value="XL" >XL</option>
                        </select>
                    </div>
                    <div class="form-control-create">
                        <h3 id="img-title-create-product">Sube imagen para el producto</h3>
                        <input type="file" name="img">
                    </div>
                    <div id="button-register">
                        <button type="submit">enviar</button>
                        <button type="reset">borrar</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <!-- footer --> 
    <%- include('../partials/footer') %>
    <!-- /footer --> 
</body>
</html>