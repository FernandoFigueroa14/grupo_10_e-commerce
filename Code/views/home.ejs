<!DOCTYPE html>
<html lang="en">
<head>
    <!-- head --> 
    <%- include('./partials/head') %>
    <!-- /head -->
    <title>DH-Clothes</title>
</head>
<body>
    <!-- header --> 
    <%- include('./partials/header') %>
    <!-- /head --> 
    <main>
        <section class="banner">
            <div class="banner-img">
                <img src="/images/banner.jpg" alt="banner">
            </div>

            <div class="banner-buttons">
                <input type="radio" name="banner" checked>
                <input type="radio" name="banner">
                <input type="radio" name="banner">
                <input type="radio" name="banner">
                <input type="radio" name="banner">
            </div>
        </section>

        <section class="articulos">
            <h3 class="titular">¡Lo más vendido en D-HC!</h3>

            <% for(let i = 0; i < productos.length; i++) { %>
                <%- include('./partials/producto', {producto : productos[i], id : i} ) %>
            <% } %>

        </section>
    </main>
    <!-- footer --> 
    <%- include('./partials/footer') %>
    <!-- /footer --> 
</body>
</html>