<!DOCTYPE html>
<html lang="en">
<head>
    <!-- head --> 
    <%- include('../partials/head') %>
    <!-- /head -->
    <title>DH-Clothes</title>
</head>
<body style="background-color: rgb(235, 235, 235)">
    <!-- header --> 
    <%- include('../partials/header', {selected: ''}) %>
    <!-- /header --> 
    <main>
        <section class="userProfile">
            <h1 style="margin-top: 25px;">Hola <%= user.nameUser %></h1>
            <h2 style="margin: 25px;"><%= user.emailUser %></h2>
            <img src="images/img-profiles/<%= user.profilePic %>" alt="profile-pic">
            <br><br>
            <% if (locals.isAdmin) { %>
                <div id="admin-container">
                    <h2 class="admin">Perfil de administrador</h2>
                    <div class="admin-buttons">
                        <h3 class="admin" style="margin-bottom: 15px;">Menu para Productos</h3>
                        <form action="product/create" method="GET">
                            <button class="logout">Agregar</button>
                        </form>
                        <form action="product/edit" method="GET">
                            <button class="logout">Editar</button>
                        </form>
                        <form action="product/delete" method="GET">
                            <button class="logout">Eliminar</button>
                        </form>
                    </div> 
                </div>
            <% } %>
            <h3>Tu ID de usuario es: <b><%= user.user_id %></b></h3>
            <form action="/editProfile" method="POST">
                <button action="submit" class="logout">Editar perfil</button>
            </form>
            <% if (!locals.isAdmin) { %>
                <form action="/history" method="POST">
                    <button type="submit" class="logout">Historial compras</button>
                </form>
            <% } %>
            <form action="/logout" method="POST">
                <button type="submit" class="logout">Logout</button>
            </form>
        </section>
    </main>
    <!-- footer --> 
    <%- include('../partials/footer') %>
    <!-- /footer --> 
</body>
</html>